<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>wwwroot\images\favicon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\fonts\LICENSE.txt" />
    <Content Remove="wwwroot\fonts\PermanentMarker-Regular.ttf" />
    <Content Remove="wwwroot\images\social-media\github.png" />
    <Content Remove="wwwroot\images\social-media\google.png" />
    <Content Remove="wwwroot\images\social-media\linkedin.png" />
    <Content Remove="wwwroot\images\social-media\outlook.png" />
    <Content Remove="wwwroot\images\social-media\whatsapp.png" />
    <Content Remove="wwwroot\images\karen-kujou\cat-ears.gif" />
    <Content Remove="wwwroot\images\karen-kujou\determined.gif" />
    <Content Remove="wwwroot\images\karen-kujou\hair-flip.gif" />
    <Content Remove="wwwroot\images\karen-kujou\staring-happy.gif" />
    <Content Remove="wwwroot\images\v-icon.png" />
    <Content Remove="wwwroot\images\wallpaper_code.jpg" />
    <Content Remove="wwwroot\javascript\fixIframeFunctions.js" />
    <Content Remove="wwwroot\javascript\headerFunctions.js" />
    <Content Remove="wwwroot\javascript\translationFunctions.js" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\fonts\LICENSE.txt" />
    <None Include="wwwroot\fonts\PermanentMarker-Regular.ttf" />
    <None Include="wwwroot\images\social-media\github.png" />
    <None Include="wwwroot\images\social-media\google.png" />
    <None Include="wwwroot\images\social-media\linkedin.png" />
    <None Include="wwwroot\images\social-media\outlook.png" />
    <None Include="wwwroot\images\social-media\whatsapp.png" />
    <None Include="wwwroot\images\favicon.ico" />
    <None Include="wwwroot\images\karen-kujou\cat-ears.gif" />
    <None Include="wwwroot\images\karen-kujou\determined.gif" />
    <None Include="wwwroot\images\karen-kujou\hair-flip.gif" />
    <None Include="wwwroot\images\karen-kujou\staring-happy.gif" />
    <None Include="wwwroot\images\v-icon.png" />
    <None Include="wwwroot\images\wallpaper_code.jpg" />
    <None Include="wwwroot\javascript\fixIframeFunctions.js" />
    <None Include="wwwroot\javascript\headerFunctions.js" />
    <None Include="wwwroot\javascript\translationFunctions.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.10" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.10" />
    <PackageReference Include="Microsoft.Extensions.Localization" Version="7.0.10" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\GithubProjects.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>GithubProjects.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\SocialMediaLinks.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>SocialMediaLinks.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\KarenKujo.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>KarenKujo.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\favicon.ico">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Update="wwwroot\index.html">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\GithubProjects.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>GithubProjects.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\SocialMediaLinks.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>SocialMediaLinks.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\KarenKujo.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>KarenKujo.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\Curiosities.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
